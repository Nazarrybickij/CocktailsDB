<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/random_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/black"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:alpha="0.7"
                    android:src="@drawable/random_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="25dp"
                    android:text="Random"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/non_alcoholic_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/black"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:alpha="0.7"
                    android:src="@drawable/non_alco_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="25dp"
                    android:text="Non Alcoholic"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/last_cocktail_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/last_cocktail_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:alpha="0.7" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|center"
                        android:text="Last Drink"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/last_cocktail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|center"
                        android:text="Your last drinks will be here"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold|italic"
                        android:textSize="15sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>